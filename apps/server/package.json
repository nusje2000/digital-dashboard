{
  "name": "digital-dashboard-api",
  "version": "0.0.1",
  "description": "Server for digital dashboard system",
  "author": "Maarten Nusteling",
  "license": "MIT",
  "prettier": "@riotbyte/prettier-config",
  "engines": {
    "node": ">=20.0.0 <22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "test": "jest",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nusje2000/canbus": "^0.0.1",
    "@nusje2000/display-driver": "*",
    "i2c-bus": "^5.2.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "socketcan": "^4.0.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@riotbyte/eslint-config": "^0.1.0",
    "@riotbyte/prettier-config": "^0.1.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^20.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
